# AI OnCall Bot Configuration
# Copy this file to .env and update with your values
# For production, override these values using environment variables in CI/CD

# General Configuration
DEBUG=false
LOG_LEVEL=INFO
PORT=8000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=https://api.openai.com/v1  # For proxy or alternative APIs (e.g., Azure OpenAI)
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.3
OPENAI_TIMEOUT=30

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_CHANNEL_ID=your-channel-id
SLACK_SOCKET_MODE=true
SLACK_SOCKET_MODE_DEBUG=true
SLACK_AUTO_RECONNECT=true
SLACK_RECONNECT_DELAY=5
SLACK_MAX_RECONNECT_ATTEMPTS=10
SLACK_PING_INTERVAL=30
SLACK_CONNECTION_TIMEOUT=60

# WebSocket Configuration
WEBSOCKET_ENABLED=true
WEBSOCKET_HEARTBEAT_INTERVAL=30
WEBSOCKET_MAX_MESSAGE_SIZE=1048576

# Workflow Configuration
WORKFLOW_CONFIG_PATH=./config/workflows/
DEFAULT_WORKFLOW=general
